---

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<div
  class="space-y-2 md:space-x-4 md:flex items-end"
>
  <div class="text-primary font-extrabold text-3xl lg:text-4xl">{title}</div>
  {description && <div class="text-foreground">{description}</div>}
</div>
